@using PagedList.Mvc
@model  PagedList.IPagedList<projectmvc.Models.tbl_category>

@{
    ViewBag.Title = "ViewCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    #main-div {
        height: 900px;
        background-image: url('../../Content/img/celebration.jpg');
        background-size: 100% 900px;
    }

    .k {
        color: red;
        font-size: 60pt;
        text-shadow: 5px 2px 4px black;
        text-align: center;
        -webkit-transform 2s;
        transition: transform 2s;
    }

        .k:hover {
            -webkit-transform: scale(1.2);
        }

    .cimg {
        -webkit-transform 2s;
        transition: transform 2s;
    }

        .cimg:hover {
            -webkit-transform: scale(1.2);
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="main-div">
        <div style="height:750px; ">
            <div class="container" style="height:600px; ">
                <div class="row">
                    <div class="col-lg-12" style="height:50px; border:1px solid solid; ">


                        <h1 class="k">WANNA NAGINA PARTY</h1>


                    </div>

                </div>



                <div class="row" style="margin-bottom:80px">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:75px">
                                <img src="@Url.Content(item.cat_image)" style=" height:75%;width:75% ;border-radius:35px 35px 35px 35px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.cat_name</h4>
                                <div style="margin-left:160px">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.cat_id }, new { onclick = "return confirm('Are you sure you want to delete')", @class = "btn btn-danger btn-sm" })

                                </div>
                            </div>

                        }
                    }








                </div>


            </div>

            <div id="container" style="margin-left: 20px">
                <p></p>
                <p></p>
                <div class="pagination" style="margin-left: 400px">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
                </div>
            </div>
        </div>
    </div>
</body>
</html>

