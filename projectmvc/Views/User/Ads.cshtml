@using PagedList.Mvc
@model  PagedList.IPagedList<projectmvc.Models.tbl_product>

@{
    ViewBag.Title = "Ads";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    #searchbox{
        margin-left:30px;
        margin-top:100px;

    }
    .row {
        margin-left: 40px;
        
    }

    .cimg {
        -webkit-transform 2s;
        transition: transform 2s;
    }

        .cimg:hover {
            -webkit-transform: scale(1.2);
        }
    .k {
        color: red;
        font-size: 60pt;
        text-shadow: 5px 2px 4px black;
        text-align: center;
        -webkit-transform 2s;
        transition: transform 2s;
    }

        .k:hover {
            -webkit-transform: scale(1.2);
        }
</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="height:600px; ">
        <div class="row">
            <div class="col-lg-12" style="height:50px; border:1px solid solid; ">
                <h1 class="k">WANNA NAGINA PARTY</h1>
            </div>
        </div>

        <div class="row" style="margin-bottom:40px">
            <div class="col-lg-2 col-md-2">
                <!--<img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style="width:100%; height:100%" />-->
            </div>
            <div class="col-lg-8 col-md-8">

                @using(@Html.BeginForm("Ads","User"))
                {
                <div id="searchbox">
                    <div class="navbar-form">
                        <div class="form-group">

                            <input type="text" class="form-control" placeholder="Search" name="search" id="search">
                        </div>
                        <button type="submit" class="btn btn-success">Search</button>
                    </div>
                </div>
                }



                <div class="row">
                    @{int x = 0;}
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            x++;
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:75px">

                                <img class="img img-responsive cimg" src="@Url.Content(item.pro_image)" style=" height:75%;width:75% ;border-radius:35px 35px 35px 35px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.pro_name, "ViewAd", new { id = @item.pro_id })</h4>

                            </div>

                        }
                    }
                    
                    <h4>@x Results found</h4>
                </div>
            </div>


            <div class="col-lg-2 col-md-2">
                <!--<img src="~/Content/img/LOB_val_600.gif" class="img img-responsive" style="width:100%; height:100%" />-->
            </div>





        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Ads", new { page }))
        </div>
    </div>
</body>
</html>