@model projectmvc.Models.Adviewmodel 

@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    .k {
        color: red;
        font-size: 60pt;
        text-shadow: 5px 2px 4px black;
        text-align: center;
        -webkit-transform 2s;
        transition: transform 2s;
    }

        .k:hover {
            -webkit-transform: scale(1.2);
        }
    td{ padding:20px;


    }

</style>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <<h1 class="k">WANNA NAGINA PARTY</h1>
        <!--<img src="~/Content/img/14560020750060463280.png" class="img img-responsive" style="width:100%" />-->
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <!--<img src="~/Content/img/adlisting2.gif" class="img img-responsive" style=" height:500px;" />-->
    </div>



    <div class="col-lg-8 col-md-8">
       
        <div>
            <h2>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h2> 
        </div>

        <img src="@Url.Content(@Model.pro_image)"  style="width:500PX; height:350PX"/>

        <div>
            <h2>Description: </h2>
            <p>@Model.pro_des</p>
       </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /> </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>
            <tr> <td colspan="2">
                @if (Convert.ToInt32(Session["u_id"])==Convert.ToInt32(Model.pro_fk_user))
                {
                
                 @Html.ActionLink("Delete This Ad", "DeleteAd", new {@class="btn btn-info" ,id = Model.pro_id })
               
              
                    
                }
                </td></tr>

        </table>
        


    </div>




    <div class="col-lg-2 col-md-2">
        <!--<img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />-->
    </div>


</div>